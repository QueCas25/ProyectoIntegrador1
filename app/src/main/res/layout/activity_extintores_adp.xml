<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtintoresADP">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="726dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/fire_extinguisher"
            android:fontFamily="@font/shermandisplay"
            android:text="FireWorld Seguridad"
            android:textColor="@color/red"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/simbolo_de_agua" />

            <TextView
                android:id="@+id/AcetatoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/coolveticarg"
                android:text="@string/AcetatoTitulo"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="175dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ext_acetato_de_potasio" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ADP_BotonRegresar"
            style="@style/MenuButton"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/regresar_24"
            android:onClick="onButtonClick"
            android:text="@string/VideoLlamadaRegresar" />

        <Switch
            android:id="@+id/language_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="EspaÃ±ol / English" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>