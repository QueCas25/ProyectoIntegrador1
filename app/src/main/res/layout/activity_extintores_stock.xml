<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtintoresStock">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FireWorld Seguridad"
            android:textSize="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/shermandisplay"
            android:textColor="@color/red"
            android:drawableLeft="@drawable/fire_extinguisher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/IImage"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NNAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/coolveticarg"
                    android:text="@string/extintorName"
                    android:textSize="40sp" />
                <TextView
                    android:id="@+id/PPRICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/coolveticarg"
                    android:text="@string/extintorPrice"
                    android:textSize="35sp" />
                <TextView
                    android:id="@+id/SSTOCK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/coolveticarg"
                    android:text="@string/extintorStock"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/BtnEnviarCarro"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:backgroundTint="@color/yellow"
                    android:drawableLeft="@drawable/carrito_local_grocery_store_24"
                    android:text="Añadir al Carrito"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/robotomedium"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/PQS_BBotonRegresar2"
            android:layout_width="match_parent"
            style="@style/MenuButton"
            android:onClick="onButtonClick"
            android:text="@string/VideoLlamadaRegresar"
            android:drawableLeft="@drawable/regresar_24"/>
        <Switch
            android:id="@+id/language_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Español / English"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>